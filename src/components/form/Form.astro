---
import styles from './Form.module.scss';
---

<section class={styles.form_container}>
  <div class={styles.tags}>
    <h5 id='business' class='active'>Business</h5>
    <h5 id='individual'>Individual</h5>
  </div>
  <form action='' class={styles.form}>
    <form action='' class={styles.form}>
      <div>
        <label for=''>Company Name</label>
        <input type='text' name='' id='' placeholder='Enter business name' />
      </div>
      <div>
        <label for=''>Business Email Address</label>
        <input type='email' name='' id='' placeholder='Enter email address' />
      </div>
      <div>
        <label for=''>Subject (optional)</label>
        <input type='text' name='' id='' placeholder='Enter business name' />
      </div>
      <div>
        <label for=''>Tell us what you need</label>
        <textarea name='' id='' placeholder='Type your message'></textarea>
      </div>

      <button type='submit' class={styles.button}>Send Message</button>
    </form>
  </form>

  <style>
    .active {
      color: #ff601f;
      border-bottom: 4px solid #ff601f;
    }
  </style>

  <script>
    const business = document.getElementById('business');
    const individual = document.getElementById('individual');

    business?.addEventListener('click', () => {
      business.classList.add('active');
      individual?.classList.remove('active');
    });

    individual?.addEventListener('click', () => {
      individual.classList.add('active');
      business?.classList.remove('active');
    });
  </script>
</section>
